{
    "name": "Twistly-API",
    "version": "1.0.0",
    "description": "API for Twistly",
    "main": "index.js",
    "private": true,
    "scripts": {
        "test": "xo && cross-env NODE_ENV=test 'nyc ava test/*.spec.js'",
        "start": "yarn start:production",
        "start:production": "cross-env NODE_ENV=production babel-node index.js | bunyan",
        "start:development": "cross-env NODE_ENV=development babel-node index.js | bunyan"
    },
    "dependencies": {
        "agenda": "^0.9.1",
        "async": "^1.5.2",
        "babel-cli": "^6.24.0",
        "babel-core": "^6.24.0",
        "babel-plugin-stack-trace-sourcemap": "^1.0.2",
        "babel-preset-es2015": "^6.24.0",
        "babel-preset-stage-2": "^6.22.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.15.0",
        "bunyan": "^1.8.10",
        "express": "^4.13.4",
        "express-api-error-handler": "^1.0.1",
        "express-jwt": "^5.1.0",
        "express-session": "^1.15.3",
        "http-errors": "^1.6.1",
        "joi": "^10.5.0",
        "jsonwebtoken": "^7.3.0",
        "method-override": "^2.3.3",
        "mongoose": "^4.4.6",
        "numeral": "^2.0.6",
        "passport": "^0.3.2",
        "passport-tumblr": "^0.1.2",
        "snyk": "1.16.0",
        "tumblr.js": "0.0.7",
        "xo": "^0.18.2"
    },
    "devDependencies": {
        "ava": "^0.19.1",
        "babel-watch": "^2.0.6",
        "coveralls": "^2.13.0",
        "cross-env": "^4.0.0",
        "nyc": "^10.2.0",
        "supertest": "^3.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/OmgImAlexis/wvvw.me"
    },
    "author": "OmgImAlexis",
    "license": "SEE LICENSE IN LICENSE.md",
    "bugs": {
        "url": "https://github.com/OmgImAlexis/twistly/issues"
    },
    "homepage": "https://github.com/OmgImAlexis/twistly",
    "babel": {
        "plugins": [
            "babel-plugin-stack-trace-sourcemap",
            {
                "importOverride": [
                    "source-map-support",
                    "install",
                    "_sourceMapSupport"
                ],
                "execute": true
            }
        ]
    },
    "xo": {
        "space": 4,
        "rules": {
            "space-before-function-paren": [
                "error",
                "never"
            ],
            "no-console": "error"
        },
        "envs": [
            "node",
            "es6"
        ]
    },
    "ava": {
        "require": [
            "babel-core/register"
        ]
    },
    "nyc": {
        "exclude": [
            "test",
            "test{,-*}.js",
            "**/*.test.js",
            "**/__tests__/**",
            "**/node_modules/**"
        ]
    }
}
