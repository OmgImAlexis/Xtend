{
    "name": "twistly",
    "version": "1.0.0",
    "description": "Twistly",
    "private": true,
    "scripts": {
        "clean-dist": "rm -rf dist && mkdir dist",
        "build": "npm run clean-dist && babel ./src -d ./dist -s",
        "lint": "xo",
        "test": "nyc ava test/**/*.spec.js",
        "start": "node ./dist/index.js"
    },
    "dependencies": {
        "agenda": "^0.9.1",
        "async": "^1.5.2",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.15.0",
        "bunyan": "^1.8.10",
        "configstore": "^3.1.0",
        "cors": "^2.8.3",
        "dumb-passwords": "^0.2.1",
        "express": "^4.13.4",
        "express-api-error-handler": "^1.1.0",
        "express-healthcheck": "^0.1.0",
        "express-jwt": "^5.1.0",
        "express-session": "^1.15.3",
        "hat": "^0.0.3",
        "http-errors": "^1.6.1",
        "joi": "^10.5.0",
        "jsonwebtoken": "^7.3.0",
        "loud-rejection": "^1.6.0",
        "meow": "^3.7.0",
        "method-override": "^2.3.3",
        "mongoose": "^4.4.6",
        "numeral": "^2.0.6",
        "passport": "^0.3.2",
        "passport-tumblr": "^0.1.2",
        "snyk": "1.16.0",
        "tumblr.js": "0.0.7",
        "xo": "^0.18.2"
    },
    "devDependencies": {
        "ava": "^0.19.1",
        "babel-cli": "^6.24.0",
        "babel-core": "^6.24.0",
        "babel-plugin-stack-trace-sourcemap": "^1.0.2",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-es2015": "^6.24.0",
        "babel-preset-stage-2": "^6.22.0",
        "babel-watch": "^2.0.6",
        "coveralls": "^2.13.0",
        "cross-env": "^4.0.0",
        "nyc": "^10.2.0",
        "supertest": "^3.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/OmgImAlexis/wvvw.me"
    },
    "author": "OmgImAlexis",
    "license": "SEE LICENSE IN LICENSE.md",
    "bugs": {
        "url": "https://github.com/OmgImAlexis/twistly/issues"
    },
    "homepage": "https://github.com/OmgImAlexis/twistly",
    "xo": {
        "space": 4,
        "rules": {
            "space-before-function-paren": [
                "error",
                "never"
            ],
            "no-console": "error",
            "unicorn/no-new-buffer": "off",
            "unicorn/filename-case": "off",
            "unicorn/custom-error-definition": "off",
            "unicorn/no-array-instanceof": "off",
            "unicorn/catch-error-name": "off",
            "unicorn/no-process-exit": "off",
            "unicorn/throw-new-error": "off",
            "unicorn/number-literal-case": "off",
            "unicorn/prefer-starts-ends-with": "off",
            "unicorn/prefer-type-error": "off",
            "unicorn/explicit-length-check": "off",
            "unicorn/no-abusive-eslint-disable": "off"
        },
        "envs": [
            "node",
            "es6"
        ]
    },
    "ava": {
        "babel": "inherit",
        "ignore": [
            "test/server/index.js",
            "test/server/token.spec.js"
        ],
        "require": [
            "babel-register",
            "babel-polyfill"
        ]
    },
    "nyc": {
        "reporter": [
            "lcov",
            "text"
        ]
    }
}
