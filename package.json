{
    "name": "twistly",
    "version": "1.0.0",
    "description": "Twistly",
    "private": true,
    "scripts": {
        "clean-dist": "rm -rf dist && mkdir dist",
        "build": "yarn run clean-dist && babel ./src -d ./dist -s",
        "test": "yarn run lint && yarn run ava",
        "lint": "xo",
        "ava": "NODE_ENV=test nyc ava --verbose --fail-fast",
        "start": "node ./dist/index.js"
    },
    "dependencies": {
        "agenda": "^0.10.2",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.17.2",
        "bunyan": "^1.8.12",
        "configstore": "^3.1.1",
        "cors": "^2.8.4",
        "dumb-passwords": "^0.2.1",
        "express": "^4.15.4",
        "express-api-error-handler": "^1.1.0",
        "express-healthcheck": "^0.1.0",
        "express-jwt": "^5.3.0",
        "express-session": "^1.15.5",
        "express-status-monitor": "^1.0.0",
        "hat": "^0.0.3",
        "http-errors": "^1.6.2",
        "joi": "^10.6.0",
        "jsonwebtoken": "^7.4.2",
        "loud-rejection": "^1.6.0",
        "meow": "^3.7.0",
        "method-override": "^2.3.9",
        "mongoose": "^4.11.6",
        "numeral": "^2.0.6",
        "passport": "^0.3.2",
        "passport-tumblr": "^0.1.2",
        "snyk": "^1.38.1",
        "tumblr.js": "^1.1.1"
    },
    "devDependencies": {
        "ava": "^0.21.0",
        "babel-cli": "^6.24.1",
        "babel-core": "^6.25.0",
        "babel-plugin-stack-trace-sourcemap": "^1.0.2",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "mongodb-memory-server": "^1.3.4",
        "nyc": "^11.1.0",
        "supertest": "^3.0.0",
        "xo": "^0.18.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/OmgImAlexis/wvvw.me"
    },
    "author": "OmgImAlexis",
    "license": "SEE LICENSE IN LICENSE.md",
    "bugs": {
        "url": "https://github.com/OmgImAlexis/twistly/issues"
    },
    "homepage": "https://github.com/OmgImAlexis/twistly",
    "xo": {
        "space": 4,
        "rules": {
            "space-before-function-paren": [
                "error",
                "never"
            ],
            "no-console": "error",
            "unicorn/no-new-buffer": "off",
            "unicorn/filename-case": "off",
            "unicorn/custom-error-definition": "off",
            "unicorn/no-array-instanceof": "off",
            "unicorn/catch-error-name": "off",
            "unicorn/no-process-exit": "off",
            "unicorn/throw-new-error": "off",
            "unicorn/number-literal-case": "off",
            "unicorn/prefer-starts-ends-with": "off",
            "unicorn/prefer-type-error": "off",
            "unicorn/explicit-length-check": "off",
            "unicorn/no-abusive-eslint-disable": "off"
        },
        "envs": [
            "node",
            "es6"
        ]
    },
    "ava": {
        "babel": "inherit",
        "ignore": [
            "test/server/index.js",
            "test/server/token.spec.js"
        ],
        "require": [
            "babel-register",
            "babel-polyfill"
        ]
    },
    "nyc": {
        "reporter": [
            "lcov",
            "text"
        ]
    }
}
