{
    "name": "Twistly-Background",
    "version": "1.0.0",
    "description": "Background management for Twistly",
    "main": "index.js",
    "private": true,
    "scripts": {
        "test": "xo && cross-env NODE_ENV=test 'nyc ava test/*.spec.js'",
        "start": "yarn start:production",
        "start:production": "cross-env NODE_ENV=production babel-node index.js | bunyan",
        "start:development": "cross-env NODE_ENV=development babel-node index.js | bunyan"
    },
    "dependencies": {
        "agenda": "^0.9.1",
        "babel-cli": "^6.24.0",
        "babel-core": "^6.24.0",
        "babel-preset-es2015": "^6.24.0",
        "babel-preset-stage-2": "^6.22.0",
        "bcryptjs": "^2.4.3",
        "bunyan": "^1.8.10",
        "jsonwebtoken": "^7.3.0",
        "loglevel": "^1.4.1",
        "mongoose": "^4.9.10",
        "snyk": "1.16.0",
        "tumblr.js": "0.0.7",
        "xo": "^0.18.2"
    },
    "devDependencies": {
        "ava": "^0.19.1",
        "babel-watch": "^2.0.6",
        "coveralls": "^2.13.0",
        "cross-env": "^4.0.0",
        "nyc": "^10.2.0",
        "supertest": "^3.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/OmgImAlexis/twistly"
    },
    "author": "OmgImAlexis",
    "license": "SEE LICENSE IN LICENSE.md",
    "bugs": {
        "url": "https://github.com/OmgImAlexis/twistly/issues"
    },
    "homepage": "https://github.com/OmgImAlexis/twistly",
    "xo": {
        "space": 4,
        "rules": {
            "space-before-function-paren": [
                "error",
                "never"
            ],
            "no-console": "error",
            "unicorn/no-new-buffer": "off",
            "unicorn/filename-case": "off",
            "unicorn/custom-error-definition": "off",
            "unicorn/no-array-instanceof": "off",
            "unicorn/catch-error-name": "off",
            "unicorn/no-process-exit": "off",
            "unicorn/throw-new-error": "off",
            "unicorn/number-literal-case": "off",
            "unicorn/prefer-starts-ends-with": "off",
            "unicorn/prefer-type-error": "off",
            "unicorn/explicit-length-check": "off",
            "unicorn/no-abusive-eslint-disable": "off"
        },
        "envs": [
            "node",
            "es6"
        ]
    },
    "ava": {
        "require": [
            "babel-core/register"
        ]
    },
    "nyc": {
        "exclude": [
            "test",
            "test{,-*}.js",
            "**/*.test.js",
            "**/__tests__/**",
            "**/node_modules/**"
        ]
    }
}
